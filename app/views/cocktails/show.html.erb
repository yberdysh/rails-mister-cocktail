<h1> <%=@cocktail.name %></h1>

<!-- can do cocktail.ingredients becaue of the through  -->

<% @cocktail.doses.each do |dose| %>
  <p class="dose"><%= dose.amount %> <%= dose.measurement %> <%= dose.ingredient.name %>
  <%= link_to "Delete", dose_path(dose), method: :delete %> </p>
  <p> <%= dose.description %> </p>
<% end %>

<p> <%= link_to "Create Recipe", new_cocktail_dose_path(@cocktail), :class => "btn btn-warning" %></p>

<p><%= link_to "Delete", cocktail_path(@cocktail), method: :delete %></p>

<p> <%= link_to "Return to all cocktails", cocktails_path, :class => "btn btn-warning" %></p>
